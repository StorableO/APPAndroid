<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFCFCF"
    tools:context=".Quiz">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:padding="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/etNaglowek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Wylosowane Slowo:"
            android:textAlignment="center"
            android:textSize="34sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/etSlowo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:visibility="visible"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/etTlumaczenie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:visibility="visible"
            android:hint="Tlumaczenie"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btnSprawdz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sprawdz"
            android:visibility="visible"
            android:textSize="20sp"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/etBledy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Ilosc Bledow: 0"
            android:textSize="24sp"
            android:visibility="visible"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/twWynik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="Gratulacje!"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_margin="20dp"
            >

            <Button
                android:id="@+id/btnZakoncz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Zakoncz"
                android:visibility="invisible"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btnZagrajPonow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:text="Zagraj ponownie" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>